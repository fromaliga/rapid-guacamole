{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": ["prettier"],
  //  "parser": "babel-eslint",
  "extends": "htmlacademy/es6",
  "rules": {
    "prettier/prettier": "error",
    "template-curly-spacing": "off",
    "object-curly-spacing": "off",
    "indent": "off",
    "arrow-parens": "off",
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "never"
      }
    ],
    "quotes": ["error", "single"]
  }
}
